<Window x:Class="School_Teacher_Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School_Teacher_Scheduler"
        mc:Ignorable="d"
        Title="Помощник календарного планирования" Height="350" Width="450" ResizeMode="NoResize" Style="{DynamicResource WindowStyle}">
    <Window.Resources>
        <ResourceDictionary>
            <!-- Believe it or not the next line fixes a bug MS acknowledges -->
            <Style TargetType="{x:Type Rectangle}" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/generic.XAML" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*" />
            <ColumnDefinition Width="307*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="309*" />
            <RowDefinition Height="26*" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Margin="10,42,0,41">
            <Grid HorizontalAlignment="Center" Height="152" VerticalAlignment="Center" Width="119">
                <Grid HorizontalAlignment="Left" Height="196" VerticalAlignment="Top" Width="132" Margin="0,26,0,0">
                    <CheckBox x:Name="mon" Content="Понедельник" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana" />
                    <CheckBox x:Name="tue" Content="Вторник" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" FontFamily="Verdana" />
                    <CheckBox x:Name="wed" Content="Среда" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" FontFamily="Verdana" />
                    <CheckBox x:Name="thur" Content="Четверг" HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top" FontFamily="Verdana" />
                    <CheckBox x:Name="fri" Content="Пятница" HorizontalAlignment="Left" Margin="0,80,0,0" VerticalAlignment="Top" FontFamily="Verdana" />
                    <CheckBox x:Name="sat" Content="Суббота" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top" FontFamily="Verdana" />
                </Grid>
                <TextBlock x:Name="days" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Дни недели:" VerticalAlignment="Top" Height="20" Width="106" FontFamily="Verdana" />
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0" Margin="5,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="79*" />
                <RowDefinition Height="127*" />
                <RowDefinition Height="93*" />
            </Grid.RowDefinitions>
            <DatePicker Style="{DynamicResource MyDatePickerStyle}" Name="datePickerStart" Focusable="False" Grid.Row="0" Margin="142,6,20,28">
                <DatePicker.Resources>
                    <Style TargetType="{x:Type DatePickerTextBox}">
                        <EventSetter Event="MouseLeftButtonUp" Handler="OnMouseLeftButtonUpDateStart" />
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            <DatePicker Style="{DynamicResource MyDatePickerStyle}" x:Name="datePickerEnd" Focusable="False" Grid.Row="0" Margin="142,37,20,3">
                <DatePicker.Resources>
                    <Style TargetType="{x:Type DatePickerTextBox}">
                        <EventSetter Event="UIElement.MouseLeftButtonUp" Handler="OnMouseLeftButtonUpDateEnd" />
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            <TextBlock x:Name="dateStart" HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="NoWrap" Text="Дата начала:" VerticalAlignment="Top" Height="20" Width="96" FontFamily="Verdana" />
            <TextBlock x:Name="dateEnd" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Дата окончания:" VerticalAlignment="Top" Height="20" Margin="10,44,0,0" Width="114" FontFamily="Verdana" />
            <ListBox x:Name="dateList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,25,10" Grid.Row="1" Background="#FF15181C" Foreground="White" />
            <Grid Grid.Row="2" Margin="0,3,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button x:Name="getDates" Content="Вывести список дат"  HorizontalAlignment="Center" VerticalAlignment="Top" Click="getDates_Click" RenderTransformOrigin="0.451,-0.266"  Grid.Row="0" Margin="-15,4,0,0" FontFamily="Verdana" Height="28" Width="182" />
                <Button x:Name="copyDates" Content="Копировать даты"  HorizontalAlignment="Center" VerticalAlignment="Top" Click="copyDates_Click"  RenderTransformOrigin="0.488,-0.149" Grid.Row="1"  Margin="-15,5,0,0" IsEnabled="False" FontFamily="Verdana" Height="28" Width="162" />
            </Grid>
        </Grid>
        <TextBlock x:Name="author" HorizontalAlignment="Left" TextWrapping="NoWrap" Text="Author: jefferyco@yandex.ru" VerticalAlignment="Bottom" Height="20" Width="430" FontFamily="Verdana" Foreground="Gray" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="-5,0,0,-12" />
    </Grid>
</Window>